{
  "name": "starhub-v2",
  "version": "1.0.1",
  "description": "Minecraft Launcher for Roleplay",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "dist": "npm run build && electron-builder",
    "release": "npm version patch && git push origin main && git push origin --tags",
    "preview": "electron-vite preview",
    "start": "electron ."
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.6.0",
    "discord-rpc": "^4.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "minecraft-launcher-core": "latest",
    "msmc": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.0.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.starhub.launcher",
    "productName": "StarHub Launcher",
    "publish": [
      {
        "provider": "github",
        "owner": "malakorreal",
        "repo": "StarHubV2"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "out/**/*",
      "resources/**/*",
      "package.json",
      "!minecraft_data/**/*",
      "!icon/**/*",
      "!.github/**/*",
      "!**/*.map"
    ]
  }
}
